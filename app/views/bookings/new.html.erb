<h1>Create a booking</h1>

<h2>Selected Flight</h2>
    <%= "From: #{@flight.origin.code} "%>
    <%= "To: #{@flight.destination.code} "%>
    <%= "Departing: #{@flight.start} "%>

<h2>Passenger Information</h2>

<%= form_with model: @booking do |f| %>
    <%= f.hidden_field :flight_id, value: @flight.id %>
    <% @passengers.each_with_index do |passenger, index| %>
        <%= f.fields_for :passengers, passenger do |pass_form| %>
            <div>
            <%= pass_form.label :name %>
            <%= pass_form.text_field :name %>
            <%= pass_form.label :email %>
            <%= pass_form.text_field :email %>
            </div>
        <% end %>
    <% end %>
    <%= f.submit "Book"%>
<% end %>